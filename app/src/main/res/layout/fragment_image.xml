<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    android:paddingTop="@dimen/action_bar_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/image_text_padding_small"
        android:textSize="@dimen/image_name_textSize"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/image_text_padding_small"

        android:textSize="@dimen/image_name_textSize"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/description_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/image_text_padding_small"

        android:textSize="@dimen/image_name_textSize"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/photo_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/image_text_padding_small"

        android:textSize="@dimen/image_name_textSize"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image_margin_small"
            android:src="@drawable/icon_share_email"
            android:visibility="gone"
            app:elevation="4dp"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/image_margin_small"
            android:src="@drawable/icon_share_sms"
            android:visibility="gone"
            app:elevation="4dp"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/image_margin_small"
            android:src="@drawable/icon_share_twitter"
            android:visibility="gone"
            app:elevation="4dp"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image_margin_small"
            android:src="@drawable/icon_share_white"
            app:elevation="4dp"/>

    </LinearLayout>


</LinearLayout>